{% extends 'base.html.twig' %} 

{% block body %}
    <section class="bags-list">
        {% for bag in bags %}

            <div class="home-cards-bag">
                <h2>{{ bag.name }}</h2>
                <div>
                    <img src="{{ asset('uploads/bag/' ~ bag.img) }}" alt="" class="home-card-img"/>
                </div>
                <div>
                    <span><strong>Marque :</strong>{{ bag.brand }}</span>
                    <span><strong>Couleur :</strong>{{ bag.color }}</span>
                    <span><strong>Propri√©taire :</strong>{{ bag.owner.username }}</span>
                    <span><strong>Type :</strong>{{ bag.Type.name }}</span>
                </div>
                <div>
                    <a href="{{ path('app_bag_show', {id : bag.id}) }}" class="btn-see-show">Voir</a>
                </div>
            </div>

        {% endfor %}
    </section>
{% endblock %}
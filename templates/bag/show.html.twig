      <img src="{{ asset('uploads/bag/' ~ bag.img) }}" alt="" />
    </div>
    <div class="show-tiles">
      <span><strong>Marque :</strong>{{ bag.brand }}</span>
      <span><strong>Couleur :</strong>{{ bag.color }}</span>
      <span><strong>Propri√©taire :</strong> {{ bag.owner.username }}</span>
      <span><strong>Type :</strong>{{ bag.Type.name }}</span>
    </div>

    <div class="card-btns">
      <a href="{{ path('app_bag_edit', { id: bag.id }) }}"
        ><button class="btn-see-show">Modifier</button></a
      >
      {% include "bag/_form_delete.html.twig" %}
    </div>
  </div>
</section>
{% endblock %}

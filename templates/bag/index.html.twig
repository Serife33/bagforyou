{% extends 'base.html.twig' %} 

{% block title %}Hello BagController!{% endblock%} 

{% block body %} 

{% for bag in bags %}
<div>
  <h2>{{ bag.name }}</h2>
  <div>
    <img src="{{ asset('uploads/bag/' ~ bag.img) }}" alt="" class=""/>
  </div>
  <div>
    <span>{{ bag.brand }}</span>
    <span>{{ bag.color }}</span>
    <span> {{ bag.owner.email }}</span>
    <span>{{ bag.Type.name }}</span>
  </div>
</div>
<div>
  <button><a href="{{ path('app_bag_show', {id : bag.id}) }}">Voir</a></button>
</div>

{% endfor %} 

{% endblock %}

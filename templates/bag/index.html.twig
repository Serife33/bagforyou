{% extends 'base.html.twig' %} 

{% block title %}Hello BagController!{% endblock%} 

{% block body %}

<section class="bags-list">

  {% for bag in bags %}
    <div class="home-cards-bag">
      <h2>{{ bag.name }}</h2>
      <div>
        <img src="{{ asset('uploads/bag/' ~ bag.img) }}" alt="" class="home-card-img"/>
      </div>
      <div>
        <span>{{ bag.brand }}</span>
        <span>{{ bag.color }}</span>
        <span> {{ bag.owner.email }}</span>
        <span>{{ bag.Type.name }}</span>
      </div>
    </div>
    <div>
      <button><a href="{{ path('app_bag_show', {id : bag.id}) }}">Voir</a></button>
    </div>

  {% endfor %} 

</section>

{% endblock %}
